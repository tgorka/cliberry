{
  "$schema": "http://json-schema.org/schema",
  "id": "SchematicsNg6Init",
  "title": "Angular 6 Init Options Schema",
  "type": "object",
  "properties": {
    "name": {
      "description": "The name of the project.",
      "type": "string",
      "format": "html-selector",
      "$default": {
        "$source": "argv",
        "index": 0
      }
    },
    "description": {
      "description": "Short description of the project.",
      "type": "string",
      "format": "html-selector",
      "$default": {
        "$source": "argv",
        "index": 1
      }
    }
  },
  "required": [
    "name",
    "description"
  ]
}